{
	"manifest_version": 3,
	"default_locale": "en",
	"name": "Ecommerce Product Scraper",
	"homepage_url": "https://github.com/deborahfam/ecom-scraper",
	"version": "0.1.0",
	"description": "Extract structured product data from e-commerce websites. Capture product names, prices, images, and metadata directly from web pages.",
	"permissions": [
	  "activeTab",
	  "clipboardWrite",
	  "commands",
	  "contextMenus",
	  "sidePanel",
	  "storage",
	  "scripting"
	],
	"host_permissions": [
	  "http://*/*",
	  "https://*/*"
	],
	"action": {
	  "default_popup": "popup.html"
	},
	"side_panel": {
	  "default_path": "side-panel.html"
	},
	"options_ui": {
	  "page": "settings.html",
	  "open_in_tab": true
	},
	"icons": {
	  "16": "icons/icon16.png",
	  "48": "icons/icon48.png",
	  "128": "icons/icon128.png"
	},
	"background": {
	  "service_worker": "background.js"
	},
	"content_scripts": [
	  {
		"matches": ["http://*/*", "https://*/*"],
		"js": [
		  "browser-polyfill.min.js",
		  "content.js"
		],
		"css": ["highlighter.css"]
	  }
	],
	"web_accessible_resources": [
	  {
		"resources": [
		  "reader.css",
		  "reader-script.js",
		  "browser-polyfill.min.js",
		  "style.css",
		  "side-panel.html"
		],
		"matches": ["*://*/*"]
	  }
	],
	"content_security_policy": {
	  "extension_pages": "script-src 'self'; object-src 'self'"
	},
	"commands": {
	  "_execute_action": {
		"suggested_key": {
		  "default": "Ctrl+Shift+E",
		  "mac": "Command+Shift+E"
		},
		"description": "Open Ecommerce Product Scraper"
	  },
	  "quick_extract": {
		"suggested_key": {
		  "default": "Alt+Shift+E",
		  "mac": "Alt+Shift+E"
		},
		"description": "Quickly extract product data from the current page"
	  },
	  "toggle_selector": {
		"suggested_key": {
		  "default": "Alt+Shift+S",
		  "mac": "Alt+Shift+S"
		},
		"description": "Toggle product selection mode"
	  }
	}
  }
  