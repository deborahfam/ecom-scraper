{
	"manifest_version": 3,
	"default_locale": "en",
	"name": "Smart Harvester",
	"homepage_url": "https://github.com/deborahfam/ecom-scraper",
	"version": "0.1.0",
	"description": "Extract structured product data from e-commerce websites. Capture product names, prices, images, and metadata directly from web pages.",
	"permissions": [
	  "activeTab",
	  "clipboardWrite",
	  "contextMenus",
	  "storage",
	  "scripting"
	],
	"host_permissions": [
	  "http://*/*",
	  "https://*/*"
	],
	"action": {
	  "default_popup": "popup.html",
	  "default_icon": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	  }
	},
	"options_ui": {
	  "page": "settings.html",
	  "open_in_tab": true
	},
	"icons": {
	  "16": "icons/icon16.png",
	  "48": "icons/icon48.png",
	  "128": "icons/icon128.png"
	},
	"background": {
	  "scripts": ["background.js"]
	},
	"content_scripts": [
	  {
		"matches": ["http://*/*", "https://*/*"],
		"js": [
		  "browser-polyfill.min.js",
		  "content.js"
		],
		"css": ["highlighter.css"]
	  }
	],
	"web_accessible_resources": [
	  {
		"resources": [
		  "reader.css",
		  "reader-script.js",
		  "browser-polyfill.min.js",
		  "style.css",
		  "side-panel.html"
		],
		"matches": ["*://*/*"]
	  }
	],
	"content_security_policy": {
	  "extension_pages": "script-src 'self'; object-src 'self'"
	},
	"commands": {
	  "_execute_action": {
		"suggested_key": {
		  "default": "Alt+Shift+E",
		  "mac": "Alt+Shift+E"
		},
		"description": "Open Smart Harvester"
	  },
	  "toggle_selector": {
		"suggested_key": {
		  "default": "Alt+Shift+S",
		  "mac": "Alt+Shift+S"
		},
		"description": "Toggle product selection mode"
	  }
	},
	"browser_specific_settings": {
	  "gecko": {
		"id": "ecommerce-product-scraper@deborahfam.com",
		"strict_min_version": "113.0",
		"data_collection_permissions": {
		  "required": ["none"]
		}
	  },
	  "gecko_android": {
		"strict_min_version": "113.0",
		"data_collection_permissions": {
		  "required": ["none"]
		}
	  }
	}
  }
  